{
  "name": "enime",
  "productName": "Enime",
  "version": "1.0.0",
  "description": "A desktop app for everyone to freely watch anime without interruptions",
  "license": "MIT",
  "main": "dist/main/main.js",
  "author": {
    "name": "Enime",
    "email": "team@enime.moe",
    "url": "https://enime.moe"
  },
  "build": {
    "appId": "moe.enime",
    "productName": "Enime",
    "copyright": "Copyright Â© 2021 ${author}",
    "files": [
      "dist/",
      "node_modules/"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "start": "babel-node index.js",
    "dev": "npm run prebuild && run-p renderer:dev start:dev",
    "build:main": "node scripts/watcher.mjs",
    "build:renderer": "webpack --config config/webpack/webpack.config.js --env env=production",
    "build:package": "electron-builder --config electron-builder.config.js",
    "build": "run-p build:renderer build:main && npm run build:package",
    "renderer:dev": "webpack serve --config config/webpack/webpack.config.js --env env=development",
    "start:dev": "NODE_ENV=development npx electronmon . --env development",
    "start:debug": "nodemon --debug --watch",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^7.0.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/platform-express": "^7.0.0",
    "babel-runtime": "^6.26.0",
    "discord-rpc": "^4.0.1",
    "nestjs-electron-ipc-transport": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "svelte-routing": "^1.6.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/register": "^7.16.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@webpack-cli/serve": "^1.6.0",
    "babel-loader": "^8.2.3",
    "chalk": "^5.0.0",
    "chokidar": "^3.5.2",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^9.0.1",
    "copy-webpack-plugin": "^6.1.0",
    "dotenv-webpack": "^7.0.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "electronmon": "^2.0.2",
    "esbuild": "^0.14.2",
    "esbuild-plugin-babel": "^0.2.3",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "26.0.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.21",
    "supertest": "^4.0.2",
    "svelte": "^3.44.2",
    "svelte-loader": "^3.1.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
